          <%= link_to "Browse classics", vehicles_path, style: "margin-left:0", class: "dropdown-item"%>
          <%= link_to "Log out", destroy_user_session_path, style: "margin-left:0", class: "dropdown-item", data: {turbo_method: :delete} %>
