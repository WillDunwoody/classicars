<div class="nav-conatiner mb-5">
  <%= render '/components/navbar' %>
  <%= render '/components/logo' %>
</div>

<div class="container">

  <h1>Upcoming Bookings:</h1>
  <div class="card-product-container">

    <% @user.bookings.each do |booking| %>

      <% if !(booking.end_date.nil?) && booking.end_date > DateTime.now %>

        <% vehicle = @vehicles.find(booking.vehicle_id) %>
        <% date = booking.end_date - booking.start_date %>
        <% price = date * vehicle.price %>

        <div class="remove-link-decoration">

          <%= link_to vehicle_path(vehicle.id) do %>

            <div class="card-product my-5">
              <img src="https://source.unsplash.com/1600x900/?<%= vehicle.make %>%20<%= vehicle.model %>car" class="card-img-top" alt="..." />
              <div class="card-product-infos">
                <h2><%= vehicle.make %> <%= vehicle.model %></h2>
                <p><strong>From</strong> <%= booking.start_date.strftime("%d/%m/%Y") %> <strong>to</strong> <%= booking.end_date.strftime("%d/%m/%Y") %></p>
                <p>€<%= price %> </p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

    <% end %>

    <h1>Previous Bookings:</h1>

    <% @user.bookings.each do |booking| %>

      <% if !(booking.end_date.nil?) && booking.end_date < DateTime.now %>

        <% vehicle = @vehicles.find(booking.vehicle_id) %>
        <% date = booking.end_date - booking.start_date %>
        <% price = date * vehicle.price %>

        <% if booking.start_date < DateTime.now %>
          <div class="remove-link-decoration">

            <%= link_to vehicle_path(vehicle.id) do %>

              <div class="card-product my-5">
                <img src="https://source.unsplash.com/1600x900/?<%= vehicle.make %>%20<%= vehicle.model %>car" class="card-img-top" alt="..." />
                <div class="card-product-infos">
                  <h2><%= vehicle.make %> <%= vehicle.model %></h2>
                  <p><strong>From</strong> <%= booking.start_date.strftime("%d/%m/%Y") %> <strong>to</strong> <%= booking.end_date.strftime("%d/%m/%Y") %></p>
                  <p>€<%= price %> </p>
                  <%= link_to "Review", new_vehicle_review_path(vehicle.id) %>
                </div>

              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>

    <% end %>
  </div>
  <h1>My Cars:</h1>
  <%= link_to "Add Car", new_user_vehicle_path(current_user) %>
</div>

<%=render '/components/footer'%>
