<%= render 'components/navbar' %>

<%# Logic for priting out dates and price for personal user %>
<div class="container">

  <h1>My Bookings:</h1>

  <div class="card-container">

    <% @user.bookings.each do |booking| %>
      <% vehicle =  @vehicles.find(booking.vehicle_id) %>
      <% date = booking.end_date - booking.start_date %>
      <% price = date * vehicle.price %>

      <% if booking.start_date < DateTime.now %>
        <div class="remove-link-decoration">

          <%= link_to vehicle_path(vehicle.id) do %>
            <div class="card mb-3" >
              <img src="https://source.unsplash.com/1600x900/?<%= vehicle.make %>%20<%= vehicle.model %>car" class="card-img-top" alt="...">
              <div class="card-body ">
                <div class="card-footer">
                  <h3 ><%= vehicle.make %> <%= vehicle.model %></h3>
                  <p><%= vehicle.city %>, <%= vehicle.country %></p>
                </div>
                <div class="card-price">
                  <p><strong>From</strong> <%= booking.start_date.strftime("%d/%m/%Y") %> <strong>to</strong> <%= booking.end_date.strftime("%d/%m/%Y") %></p>
                  <p>â‚¬<%= price %> </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>

  </div>

  <h1>My Cars:</h1>
  <%= link_to "Add Car", new_vehicle_path %>



</div>
